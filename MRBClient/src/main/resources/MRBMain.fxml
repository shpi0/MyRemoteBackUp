<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>


<StackPane fx:id="mainStackPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox alignment="CENTER" prefHeight="600.0">
               <children>
                  <ListView fx:id="localListView" prefHeight="100.0" prefWidth="350.0" />
                  <VBox alignment="CENTER" prefWidth="100.0">
                     <children>
                        <Button fx:id="loginBtn" onAction="#loginButton" mnemonicParsing="false" prefWidth="100.0" text="LOGIN" />
                        <Button fx:id="registerBtn" onAction="#registerButton" mnemonicParsing="false" prefWidth="100.0" text="REGISTER" />
                        <Button fx:id="refreshBtn" onAction="#refreshButton" mnemonicParsing="false" prefWidth="100.0" text="REFRESH" />
                        <Button fx:id="deleteBtn" onAction="#deleteButton" mnemonicParsing="false" prefWidth="100.0" text="DELETE" />
                        <Button fx:id="sendBtn" onAction="#sendButton" mnemonicParsing="false" prefWidth="100.0" text="SEND &gt;&gt;&gt;" />
                        <Button fx:id="getBtn" onAction="#getButton" mnemonicParsing="false" prefWidth="100.0" text="&lt;&lt;&lt; GET" />
                     </children>
                  </VBox>
                  <ListView fx:id="serverListView" prefHeight="100.0" prefWidth="350.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
